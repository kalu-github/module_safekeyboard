<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@android:color/holo_blue_light"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="false"
    tools:ignore="ResourceName">


    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/moudle_keyboard_bg"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:focusable="false"
        android:orientation="vertical"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp"
        android:paddingBottom="0dp">

        <Space
            android:id="@+id/moudle_safe_id_baseline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_red_dark"
            android:focusable="false" />

        <lib.kalu.input.CusKeyboardView
            android:id="@+id/moudle_safe_id_keyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="24dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:focusable="true"
            android:paddingStart="0dp"
            android:paddingTop="0dp"
            android:paddingEnd="0dp"
            android:paddingBottom="0dp"
            app:keyBackground="@drawable/moudle_safe_keyboard_background_selector"
            app:keyTextColor="#ffffff"
            app:keyTextSize="20sp"
            app:shadowColor="@color/safe_keyboard_color_333333"
            app:shadowRadius="0.8" />

    </LinearLayout>

</RelativeLayout>