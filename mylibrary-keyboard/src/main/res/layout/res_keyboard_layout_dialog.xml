<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:focusable="false">

    <lib.kalu.keyboard.KeyboardView
        android:id="@+id/moudle_safe_id_keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/res_keyboard_ic_background_dialog"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_centerHorizontal="true"
        android:focusable="true"
        android:padding="60dp"
        app:keyBackground="@drawable/res_keyboard_ic_background_letter"
        app:keyFocus="true"
        app:keyTextColor="#ffffff"
        app:keyTextSize="30sp"
        app:keyTouch="false" />

</RelativeLayout>