<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

    <item android:state_hovered="true">
        <shape android:shape="rectangle" tools:ignore="ResourceName">
            <gradient android:endColor="#ff6200" android:startColor="#ff3c3c" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle" tools:ignore="ResourceName">
            <gradient android:endColor="#ff6200" android:startColor="#ff3c3c" />
            <corners android:radius="8dp" />
        </shape>
    </item>


    <item>
        <shape android:shape="rectangle" tools:ignore="ResourceName">
            <solid android:color="#00000000" />
            <corners android:radius="8dp" />
        </shape>

    </item>

</selector>